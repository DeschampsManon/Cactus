{{ form_start(form) }}
<div class="row" id="user-form">
    <div class="col relative">
        {{ form_row(form.avatar, {'id': 'original-file-upload'}) }}
        <div class="content-flex avatar relative">
            <img src="{{ asset('images/test.jpg') }} ">
            <label for="original-file-upload">
              <i class="material-icons" id="burger-menu-close">
                cloud_download
              </i>
            </label>
        </div>
    </div>
    <div class="col">
        <div class="row">
            <div class="col moitie">
            {{ form_row(form.firstname) }}
            </div>
            <div class="col moitie">
              {{ form_row(form.lastname) }}
            </div>
          </div>
          <div class="row">
            <div class="col moitie">
            {{ form_row(form.roles) }}
            </div>
            <div class="col moitie">
              {{ form_row(form.email) }}
            </div>
          </div>
          <div class="row">
            <div class="col moitie">
              {{ form_row(form.plainPassword.first) }}
            </div>
            <div class="col moitie">
              {{ form_row(form.plainPassword.second) }}
            </div>
          </div>
          <div class="row">
            <div class="col moitie">
            {{ form_row(form.phone) }}
            </div>
            <div class="col moitie">
              {{ form_row(form.address) }}
            </div>
          </div>
          <div class="row">
            <div class="col moitie">
              {{ form_row(form.city) }}
            </div>
            <div class="col moitie">
              {{ form_row(form.zipCode) }}
            </div>
        </div>
    </div>
</div>
<button type="submit" class="btn btn-aqua">Submit</button>
{{ form_end(form) }}