{% extends 'AdminBundle::base.html.twig' %}

{% block title %}Home{% endblock %}

{% block pageTitle %}Manage Users{% endblock %}

{% block pageSubTitle %}Lorem ipsum dolor sit amet, consectetur adipisicing elit.{% endblock %}

{% block content %}
	<section class="white-content clearfix">
	    <table class="main-table datatable">
	   		<thead>
		   		<tr>
		   			<th>User</th>
		   			<th>Email</th>
		   			<th>Phone</th>
		   			<th>Address</th>
		   			<th>Roles</th>
		   		</tr>
		   	</thead>
		   	<tbody>
		   		{% for user in users %}
					<tr>
						<td>
							{{ user.firstname }}
							{{ user.lastname }}
						</td>
						<td>
							{{ user.email }}
						</td>
						<td>
							{{ user.phone }}
						</td>
						<td>
							{{ user.address }}
							{{ user.city }},
							{{ user.zipCode }}
						</td>
						<td class="user-roles">
							{{ user.roles|join(', ')|capitalize }}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}