{% set route = app.request.get('_route') %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{% endblock %} | Cactus </title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta name="author" content="Manon DESCHAMPS">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
    {% stylesheets 'css/admin/*' filter='sass' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
</head>
<body>
    {% include 'AdminBundle::header.html.twig' %}
    <div class="container">

        {% block flash %}

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div>
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.session.flashbag.get('error') %}
                <div>
                    {{ flashMessage }}
                </div>
            {% endfor %}

        {% endblock %}

        {% block content %}{% endblock %}


        {% block footer %}{% endblock footer %}

    </div>
    <script src="{{ asset('javascript/library/jquery-3.1.1.min.js') }}"></script>
    {% javascripts 'javascript/admin/*' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
</body>
</html>